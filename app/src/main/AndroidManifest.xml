<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.wontak.boilerplate"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".AndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Main -->
        <activity android:name=".presentation.ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Result -->
        <activity android:name=".presentation.ui.activities.ResultActivity"
                  android:screenOrientation="portrait">
        </activity>

        <!-- Web -->
        <activity android:name=".presentation.ui.activities.WebActivity"
                  android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>